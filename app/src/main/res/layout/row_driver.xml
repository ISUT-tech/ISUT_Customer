<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardl"
        android:layout_width="@dimen/heightsize_60dp"
        android:layout_height="@dimen/heightsize_60dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="@dimen/heightsize_10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/heightsize_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="@dimen/heightsize_30dp"
        android:outlineAmbientShadowColor="@color/colorRed"
        android:outlineSpotShadowColor="@color/colorRed"
        android:paddingBottom="@dimen/heightsize_30dp"
        android:paddingLeft="@dimen/heightsize_30dp"
        android:paddingRight="@dimen/heightsize_30dp"
        android:layout_marginTop="@dimen/heightsize_5dp"
        android:layout_marginLeft="@dimen/heightsize_10dp"
        android:layout_marginRight="@dimen/heightsize_5dp"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:id="@+id/reali"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/heightsize_50dp"
                android:layout_height="@dimen/heightsize_40dp"
                android:src="@drawable/taxi"

                android:paddingTop="@dimen/heightsize_10dp"
                android:layout_centerHorizontal="true"


                />

            <TextView
                android:id="@+id/zname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img"
                android:layout_marginTop="@dimen/heightsize_2dp"
                android:textSize="@dimen/heightsize_12dp"
                android:textColor="@color/colorFont"
                android:layout_centerHorizontal="true"
                android:text="driver"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>